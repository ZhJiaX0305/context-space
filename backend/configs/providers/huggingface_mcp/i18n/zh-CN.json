{
  "name": "HuggingFace",
  "description": "无缝访问 Hugging Face 的模型、数据集和研究论文。与各种资源和工具互动，以增强您的 LLM 能力。",
  "categories": [
    "数据集",
    "LLM",
    "信息"
  ],
  "permissions": [
    {
      "identifier": "mcp_tools_access",
      "name": "MCP 工具访问",
      "description": "访问 MCP 服务器工具"
    }
  ],
  "operations": [
    {
      "identifier": "search-models",
      "name": "搜索模型",
      "description": "在 Hugging Face Hub 上搜索模型",
      "parameters": [
        {
          "name": "query",
          "description": "搜索词（例如，'bert'，'gpt'）"
        },
        {
          "name": "author",
          "description": "按作者/组织筛选（例如，'huggingface'，'google'）"
        },
        {
          "name": "tags",
          "description": "按标签筛选（例如，'text-classification'，'translation'）"
        },
        {
          "name": "limit",
          "description": "返回的最大结果数"
        }
      ]
    },
    {
      "identifier": "get-model-info",
      "name": "获取模型信息",
      "description": "获取特定模型的详细信息",
      "parameters": [
        {
          "name": "model_id",
          "description": "模型的 ID（例如，'google/bert-base-uncased'）"
        }
      ]
    },
    {
      "identifier": "search-datasets",
      "name": "搜索数据集",
      "description": "在 Hugging Face Hub 上搜索数据集",
      "parameters": [
        {
          "name": "query",
          "description": "搜索词"
        },
        {
          "name": "author",
          "description": "按作者/组织筛选"
        },
        {
          "name": "tags",
          "description": "按标签筛选"
        },
        {
          "name": "limit",
          "description": "返回的最大结果数"
        }
      ]
    },
    {
      "identifier": "get-dataset-info",
      "name": "获取数据集信息",
      "description": "获取特定数据集的详细信息",
      "parameters": [
        {
          "name": "dataset_id",
          "description": "数据集的 ID（例如，'squad'）"
        }
      ]
    },
    {
      "identifier": "search-spaces",
      "name": "搜索空间",
      "description": "在 Hugging Face Hub 上搜索空间",
      "parameters": [
        {
          "name": "limit",
          "description": "返回的最大结果数"
        },
        {
          "name": "query",
          "description": "搜索词"
        },
        {
          "name": "author",
          "description": "按作者/组织筛选"
        },
        {
          "name": "tags",
          "description": "按标签筛选"
        },
        {
          "name": "sdk",
          "description": "按 SDK 筛选（例如，'streamlit'，'gradio'，'docker'）"
        }
      ]
    },
    {
      "identifier": "get-space-info",
      "name": "获取空间信息",
      "description": "获取特定空间的详细信息",
      "parameters": [
        {
          "name": "space_id",
          "description": "空间的 ID（例如，'huggingface/diffusers-demo'）"
        }
      ]
    },
    {
      "identifier": "get-paper-info",
      "name": "获取论文信息",
      "description": "获取 Hugging Face 上特定论文的信息",
      "parameters": [
        {
          "name": "arxiv_id",
          "description": "论文的 arXiv ID（例如，'1810.04805'）"
        }
      ]
    },
    {
      "identifier": "get-daily-papers",
      "name": "获取每日论文",
      "description": "获取 Hugging Face 精选的每日论文列表",
      "parameters": []
    }
  ]
}